CREATE TABLE IF NOT EXISTS `comments` (
  `id` INTEGER,
  `nick` TEXT,
  `mail` TEXT,
  `url` TEXT,
  `timestamp` INTEGER,
  `ip` TEXT,
  `text` TEXT,
  `post_id` INTEGER,
  `parent` INTEGER,
  `db` TEXT,
  `status` TEXT,
  PRIMARY KEY (`id`)
)

CREATE TABLE IF NOT EXISTS `posts` (
  `id` INTEGER,
  `permaid` TEXT,
  `nick` TEXT,
  `timestamp` INTEGER,
  `title` TEXT,
  `text_html` TEXT,
  `text_markdown` TEXT,
  `text_type` TEXT,
  `tags` TEXT,
  `db` TEXT,
  `status` TEXT,
  `comment_count` INTEGER,
  `comment_status` TEXT,
  PRIMARY KEY (`id`)
)

CREATE TABLE IF NOT EXISTS `sites` (
  `id` INTEGER,
  `domain` TEXT,
  `lang` TEXT,
  `locale` TEXT,
  `collate` TEXT,
  `analytics_enabled` INTEGER,
  `analytics_code` TEXT,
  `url` TEXT,
  `statics_url` TEXT,
  `theme` TEXT,
  `db` TEXT,
  `title` TEXT,
  `page_size` INTEGER,
  `robots` TEXT,
  `mail` TEXT,
  `site_key` TEXT,
  `meta_json` TEXT,
  `admin_mail` TEXT,
  PRIMARY KEY (`id`)
)

